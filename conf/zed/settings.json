// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent_servers": {
    "opencode": {
      "type": "registry"
    }
  },
  "auto_install_extensions": {
    "ansible": true,
    "astro": true,
    "biome": true,
    "catppuccin": true,
    "catppuccin-icons": true,
    "clojure": true,
    "codebook": true,
    "csharp": true,
    "dart": true,
    "deno": true,
    "docker-compose": true,
    "dockerfile": true,
    "elixir": true,
    "elm": true,
    "erlang": true,
    "git-firefly": true,
    "gleam": true,
    "harper": true,
    "html": true,
    "java": true,
    "jsonnet": true,
    "julia": true,
    "just": true,
    "kotlin": true,
    "latex": true,
    "leptos": true,
    "log": true,
    "lua": true,
    "make": true,
    "markdown-oxide": true,
    "matlab": true,
    "mcp-server-brave-search": true,
    "mcp-server-container-use": true,
    "mcp-server-context7": true,
    "mcp-server-github": true,
    "mcp-server-repomix": true,
    "mcp-server-sequential-thinking": true,
    "nix": true,
    "nu": true,
    "ocaml": true,
    "odin": true,
    "perplexity": true,
    "postgres-context-server": true,
    "probe-rs": true,
    "proto": true,
    "pyrefly": true,
    "r": true,
    "ruby": true,
    "scala": true,
    "scheme": true,
    "solarized": true,
    "sql": true,
    "sqruff": true,
    "svelte": true,
    "swift": true,
    "terraform": true,
    "toml": true,
    "vue": true,
    "xml": true
  },
  "buffer_font_size": 16,
  "context_servers": {
    "postgres-context-server": {
      "enabled": false,
      "settings": {
        "database_url": "postgresql://myuser:mypassword@localhost:5432/mydatabase"
      }
    }
  },
  "icon_theme": "Catppuccin Macchiato",
  "theme": {
    "dark": "Catppuccin Macchiato",
    "light": "Catppuccin Latte",
    "mode": "system"
  },
  "ui_font_size": 16
}
