// Place your settings in this file to overwrite the default settings
{
  "C_Cpp.default.configurationProvider": "ms-vscode.makefile-tools",
  "GitLive.Issue tracker integration": "Disabled",
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "bazel.buildifierPath": "/usr/local/bin/buildifier",
  "carbon.fontFamily": "Source Code Pro",
  "cmake.configureOnOpen": false,
  "codespaces.accountProvider": "GitHub",
  "csharp.suppressDotnetInstallWarning": true,
  "debug.terminal.clearBeforeReusing": true,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "esbonio.server.enabled": true,
  "extensions.autoUpdate": true,
  "files.associations": {
    "*.m": "matlab"
  },
  "files.exclude": {
    "**/.classpath": true,
    "**/.factorypath": true,
    "**/.project": true,
    "**/.settings": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.ammonite": true,
    "**/.bloop": true,
    "**/.metals": true,
    "**/target": true
  },
  "git.autofetch": true,
  "git.path": "/usr/local/bin/git",
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true
  },
  "gitlens.historyExplorer.enabled": true,
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,
  "go.toolsManagement.autoUpdate": true,
  "kite.showWelcomeNotificationOnStartup": false,
  "makefile.extensionOutputFolder": "./.vscode",
  "markdownlint.config": {
    "MD025": {
      "front_matter_title": ""
    },
    "MD028": false
  },
  "markdownlint.customRules": [
    "{docsmsft.docs-linting}/markdownlint-custom-rules/rules.js"
  ],
  "matlab.lintOnSave": false,
  "metals.javaHome": "/Library/Java/JavaVirtualMachines/adoptopenjdk-8.jdk/Contents/Home",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "python.formatting.autopep8Args": [
    "--global-config",
    "${workspaceRoot}/setup.cfg",
    "--max-line-length",
    "79",
    "--experimental"
  ],
  "python.formatting.blackArgs": [
    "--line-length",
    "79"
  ],
  "python.formatting.provider": "yapf",
  "python.formatting.yapfArgs": [
    "--style",
    "{based_on_style: google, column_limit: 79}"
  ],
  "python.jediEnabled": false,
  "python.languageServer": "Pylance",
  "python.linting.flake8Args": [
    "--config",
    "${workspaceRoot}/setup.cfg"
  ],
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "/usr/local/bin/flake8",
  "python.linting.pylintEnabled": false,
  "python.pythonPath": "/usr/local/bin/python3",
  "redhat.telemetry.enabled": false,
  "restructuredtext.confPath": "",
  "rust-client.rustupPath": "/Users/tin/.cargo/bin/rustup",
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontFamily": "'MesloLGS NF'",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "trunk.trunkGrayOutNonBlockingIssues": false,
  "vs-kubernetes": {
    "vs-kubernetes.draft-path.mac": "${env:HOME}/tin/.vs-kubernetes/tools/draft/darwin-amd64/draft",
    "vs-kubernetes.helm-path.mac": "${env:HOME}/.vs-kubernetes/tools/helm/darwin-amd64/helm",
    "vscode-kubernetes.minikube-path.mac": "/Users/tin/.vs-kubernetes/tools/minikube/darwin-amd64/minikube"
  },
  "vscode-edge-devtools.mirrorEdits": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.colorTheme": "Solarized Dark",
  "workbench.editor.enablePreview": false,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "yaml.schemaStore.enable": false,
  "yaml.schemas": {
    "file:///toc.schema.json": "/toc\\.yml/i"
  }
}
