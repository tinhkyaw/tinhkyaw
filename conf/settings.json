// Place your settings in this file to overwrite the default settings
{
    "editor.formatOnSave": true,
    "files.associations": {
        "*.m": "matlab"
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "matlab.lintOnSave": false,
    "python.formatting.autopep8Args": ["--max-line-length", "180"],
    "python.linting.pylintArgs": ["--max-line-length", "120"],
    "python.linting.pylintPath": "/usr/local/bin/pylint",
    "python.pythonPath": "/usr/local/bin/python",
    "terminal.integrated.fontFamily": "'Knack Nerd Font'",
    "terminal.integrated.fontSize": 14,
    "workbench.colorTheme": "Solarized Dark",
    "workbench.editor.enablePreview": false,
    "azure-iot-toolkit.showIoTHubInfo": false,
    "team.showWelcomeMessage": false
}