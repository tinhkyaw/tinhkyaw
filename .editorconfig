# https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,rst}]
indent_size = 4

[*.py]
max_line_length = 79

[*.js]
block_comment_start = /**
block_comment = *
block_comment_end = */

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4
